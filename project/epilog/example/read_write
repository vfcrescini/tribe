/*
 * read_write
 * Vino Crescini  <jcrescin@cit.uws.edu.au>
 */

ident sub s;
ident acc read, write;
ident obj f;

initially holds(s, read, f);

assign_write(X, Y) causes holds(X, write, Y);
delete_write(X, Y) causes !holds(X, write, Y) if holds(X, write, Y);

query holds(s, write, f) after assign_write(s, f);
query !holds(s, write, f) after assign_write(s, f), delete_write(s, f);
