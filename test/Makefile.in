TOPSRCDIR = @top_srcdir@
DISTDIR = @DISTDIR@
LIBDIR = @LIBDIR@
CURDIR = test
CC = @CC@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
LN_S = @LN_S@
DEBUG = @DEBUG@
TESTPROG = @TESTPROG@
STRIP = @STRIP@
BUILDSHARED = @BUILDSHARED@
STATIC = @STATIC@
VERSION = @VERSION@
BINS =
STATIC_LIBS =
SHARED_LIBS =
INCLUDES =
OBJECTS =
TEMPS1 =
TEMPS2 =

ifdef TESTPROG
  BINS += tribe_test
  OBJECTS += test.o
endif

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
libdir = @libdir@
includedir = @includedir@

include $(TOPSRCDIR)/rules.mk

tribe_test : $(OBJECTS) $(LIBDIR)/libtribe.so.*
ifdef STATIC
	$(CC) $(LDFLAGS) -static -o $(@) $(OBJECTS) -ltribe
else
	$(CC) $(LDFLAGS) -o $(@) $(OBJECTS) -ltribe
endif
ifndef DEBUG
  ifdef STRIP
	strip $(@)
  endif
endif

test.o : $(LIBDIR)/rel.h $(LIBDIR)/network.h test.c
	$(CC) $(CFLAGS) -o $(@) -c test.c
